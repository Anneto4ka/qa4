// 1.Задайте переменную с именем num, присвойте ей значение 2104

let num = 2104;

// 2.Выведите в консоль значение переменной num

console.log(num);

// 3.Выведите в консоль результат сложения num и числа 3503 (любым способом)

console.log(num + 3503);

// 4.Задайте переменную str, запишите в нее следующую строчку: how are you?

let str = 'how are you?';

// 5.Выведите в консоль значение переменной str

console.log(str);

// 6.Выведите в консоль длину строки str

console.log(str.length);

// 7.Выведите в консоль вопросительный знак из строки str (последний символ строки)

console.log(str [str.length - 1]);

// 8.Задайте переменную arr, запишите в нее массив с элементами 3, 6, 0, -7, 4, 12

let arr = [3, 6, 0, -7, 4, 12];

// 9.Выведите в консоль третий элемент массива arr (значение которого ноль)

console.log(arr [2]);

// 10.Выведите в консоль длину массива arr

console.log(arr.length);

// 11.Выведите в консоль сумму первого и последнего элементов массива arr

let a = arr[0] + arr[arr.length - 1];    
console.log(a);

// 12.Задайте переменную obj, запишите в нее ключи first, second, third со значением 1, 2, 3

let obj = {
  first: 1, 
  second: 2, 
  third: 3,
};

// 13.Выведите в консоль значение ключа second в объекте obj

console.log(obj.second);

// 14.Удалите первый элемент объекта obj

delete obj.first;
console.log(obj);

// 15.Добавьте любой новый элемент в объект (будьте креативны)

obj.name = {
  place: 'Baltimore Kung-Fu Tournament',
};
  console.log(obj);




