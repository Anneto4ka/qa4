//    }
//    console.log('_____________');
 }

// 7. Для заданного ниже массива подсчитайте общее количество букв 'a' в элементах массива.
// Выведите это количество в консоль. Пользуйтесь только циклами, не методами!
const fruits = ['apple', 'banana', 'carambola', 'figs', 'guava'];

let totalA = 0;
for (i = 0; i < fruits.length; i++) {
  let str = fruits[i];
  for (let x = 0; x <= str.length; x++) {
    if (str[x] === 'a') {
       totalA++;
    }
  }
}
console.log(totalA);

